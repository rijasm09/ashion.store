<section>

    <div class="container" style="margin-top: -2rem;">
        <table class="table view-pd-tb mt-4 table-responsive">
            <thead>
                <tr>
                    <a class="add-pd-btn btn btn-primary mt-5 float-end" href="/admin/add-product">ADD PRODUCT</a>
                    <th class="view-pd-tb-th" scope="col">No</th>
                    <th class="view-pd-tb-th" scope="col">Name</th>
                    <th class="view-pd-tb-th" scope="col">Category</th>
                    <th class="view-pd-tb-th" scope="col">Actual Price</th>
                    <th class="view-pd-tb-th" scope="col">Offer Price</th>
                    <th class="view-pd-tb-th" scope="col">Active offer%</th>
                    <th class="view-pd-tb-th" scope="col">Stock</th>
                    <th class="view-pd-tb-th" scope="col">Description</th>
                    <th class="view-pd-tb-th" scope="col">Image</th>

                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th class="view-pd-tb-th" scope="row">{{inc @index}}</th>
                    <td class="view-pd-tb-th">{{this.Name}}</td>
                    <td class="view-pd-tb-th">{{this.category}}</td>
                    <td class="view-pd-tb-th">{{this.ActualPrice}}</td>
                    <td class="view-pd-tb-th">{{this.OfferPrice}}</td>
                    {{!-- <td class="view-pd-tb-th">{{this.Brand}}</td> --}}
                    <td class="view-pd-tb-th"> <button class="btn btn-success dropdown-toggle" type="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Active Offer: {{this.activePercentage}}%
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item">Product Offer: {{this.proPercentage}}%</a></li>
                            <li><a class="dropdown-item">Category offer: {{this.catPercentage}}%</a></li>
                        </ul>
                    </td>
                    <td class="view-pd-tb-th">{{this.Stock}}</td>
                    <td class="view-pd-tb-th ovr-flw">{{this.Description}}</td>
                    <td><img style="width: 50px; height:50px" src="{{this.image.[0]}}" alt="loading..." />
                    </td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}"><button type="button" class="btn btn-primary">
                                <ion-icon name="create-outline"></ion-icon>
                            </button></a>
                        <a href="/admin/delete-product/{{this._id}}"
                            onclick="return confirm('Do you want to delete{{this.Name}}')"><button type="button"
                                class="btn btn-danger">
                                <ion-icon name="trash"></ion-icon>
                            </button></a>
                    </td>
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
