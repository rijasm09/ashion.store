<section>
    <div class="container" style="margin-left: 250px;">
        <div class="add-pd-btn">
            <a href="/admin/add-category"><button type="button" class="btn btn-success">Add Category</button></a>
        </div>
        <table class="table  view-pd-tb">
            <thead>
                <tr>
                    <th class="view-pd-tb-th" scope="col">No</th>
                    <th class="view-pd-tb-th" scope="col">Category Name</th>
                    <th class="view-pd-tb-th" scope="col">Description</th>
                    {{!-- <th class="view-pd-tb-th">Category Image</th> --}}
                </tr>
            </thead>
            <tbody>
                {{#each category}}
                <tr>
                    <th class="view-pd-tb-th" scope="row">{{inc @index}}</th>
                    <td class="view-pd-tb-th">{{this.Name}}</td>
                    <td class="view-pd-tb-th ovr-flw">{{this.catDescription}}</td>
                    {{!-- <td class="view-pd-tb-th"><img style="width:50px;height:50px" src="/category-images/{{this._id}}.jpg" alt=""></td> --}}
                    <td>
                        <a href="/admin/edit-category/{{this._id}}"><button type="button" class="pd-edit-btn btn btn-primary">Edit</button></a>
                        <a href="/admin/delete-category/{{this._id}}"
                            onclick="return confirm('Do you want to delete{{this.Name}}')"><button type="button"
                                class="btn btn-danger">Delete</button></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>