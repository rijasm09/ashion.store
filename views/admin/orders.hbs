    <div class="btn-group btn-group-toggle w-25 mt-5 sales">
        <button id="placed" class="btn btn-primary active" onclick="orderStatus('placed')">placed</button>
        <button id="pending" class="btn btn-primary " onclick="orderStatus('pending')">pending</button>
        <button id="shipped" class="btn btn-primary " onclick="orderStatus('shipped')">shipped</button>
        <button id="delivered" class="btn btn-primary " onclick="orderStatus('delivered')">delivered</button>
        <button id="canceled" class="btn btn-primary " onclick="orderStatus('canceled')">canceled</button>
    </div>
    <hr class="mt-1">
    <div id="manage-user">
        <table id="table" class="table table-borderless table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">S.no</th>
                    <th scope="col">Customer</th>
                    <th scope="col">Address</th>
                    <th scope="col">Order Date</th>
                    <th scope="col">Product</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Price</th>
                    <th scope="col">Payment</th>
                    <th scope="col">Status</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                <tr style="font-size: 14px;">
                    <td>
                        {{inc @index}}
                    </td>
                    <td class="order-data">
                        {{this.ordername}}
                        <div style="font-size: 12px;">{{this.phonenumber}}</div>
                    </td>
                    <td class="order-data">
                        {{this.address}},
                        <br>
                        {{this.city}},
                        <br>
                        {{this.pincode}}
                    </td>
                    <td class="order-data">{{this.date}}</td>
                    <td class="order-data">{{this.Name}}</td>
                    <td class="order-data">{{this.quantity}}</td>
                    <td class="order-data">â‚¹{{this.OfferPrice}}</td>
                    <td class="order-data">{{this.paymentMethod}}</td>
                    <td class="order-data" id="{{this._id}}{{this.item}}">{{this.status}}</td>
                    {{!-- dropdown button --}}
                    <td class="order-data">
                        <select class="form-control" id="{{this.item}}{{this._id}}"
                            onchange="statusChange('{{this._id}}','{{this.item}}')" style="width: 100px;">
                            <option selected="true" disabled="disabled" style="background-color: blue; color: white;">
                                {{this.status}}</option>

                            {{#ifNotEqBoth status 'canceled' 'return' }}
                            <option value="pending">Pending</option>
                            <option value="placed">Placed</option>
                            <option value="shipped">Shipped</option>
                            <option value="delivered">Delivered</option>
                            <option value="canceled">Canceled</option>
                            {{/ifNotEqBoth}}

                            {{#ifCheck status 'canceled' }}
                          
                            {{/ifCheck}}

                             {{#ifCheck status 'return' }}
                            
                            {{/ifCheck}}

                        </select>
                    </td>

                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>