<section style="margin-top: -8rem;margin-left: -20rem;">
    <div class="container" style="">
        {{!-- <div class="title mb-5">
            <p>Hai, &#128075; {{user.username}}</p>
        </div> --}}
        <div class="d-flex align-items-center" style="margin-top: 1rem;">
            <div class="text-decor">Order History</div>
            <br>
            <hr>
            {{!-- <form
                class="form-inline d-flex justify-content-center md-form form-sm active-cyan-2 ms-4 mt-2 align-items-center">
                <input class="form-control form-control-sm mr-3 w-100" type="text" placeholder="Search User"
                    name="searchUser" aria-label="Search">
                <a href=""><i class="fas fa-search ms-2" aria-hidden="true"></i></a>
            </form> --}}
        </div>

        {{#each orders}}
        <div class="card mb-4">
            <h5 class="card-header" style="background-color:grey; color:white; font-size: 15px;">{{this.date}}
            </h5>
            <div class="d-flex card-font-size">
                <img class="img-fluid ms-2 my-2" src="{{this.image}}" alt="Card image cap" width="120">
                <div class="card-body ms-5 w-25">
                    <h5 class="card-title">{{this.Name}}</h5>
                    <p class="card-text">Quantity: {{this.quantity}}</p>
                    <p class="card-text">Total Amount: â‚¹{{this.prodTotal}}</p>
                </div>
                <div class="card-body w-25">
                    <p class="card-text">Name: {{this.ordername}},<br> Address: {{this.address}}
                    </p>
                    <p class="card-text">State:{{this.city}} ,<br>Ph No: {{this.phonenumber}}
                    </p>
                    <p class="card-text">Pincode: {{this.pincode}}
                </div>
                <div class="card-body frame">
                    <p class="card-text">Payment Method: {{this.paymentMethod}}</p>
                    <p class="card-text">Order Status: <span id="{{this._id}}{{this.item}}"
                            style="color:#24B037">{{this.status}}</span></p>
                    <p><span id="{{inc @index}}" style="color:red"></span></p>

                    {{#ifNotEqTri status 'delivered' 'canceled' 'return'}}

                    <a
                        onclick="cancelOrder('{{this._id}}','{{this.item}}','{{this.quantity}}','{{this.prodTotal}}','{{inc @index}}')"><button
                            style=" background: rgb(255,27,0);" type="button" class="custom-btn btn-9"
                            id="{{this.item}}{{this._id}}">Cancel
                            Order</button></a>
                    {{/ifNotEqTri}}

                    {{#ifCheck status 'delivered' }}
                    <a
                        onclick="returnOrder('{{this._id}}','{{this.item}}','{{this.quantity}}','{{this.prodTotal}}','{{inc @index}}')"><button
                            style=" background: rgb(251,33,117);" type="button" class="custom-btn btn-9"
                            id="{{this.item}}{{this._id}}">Return Order</button></a>
                    {{/ifCheck}}

                </div>

            </div>
        </div>
        {{/each}}
    </div>



    <!-- Js Plugins -->
    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery.magnific-popup.min.js"></script>
    <script src="/js/jquery-ui.min.js"></script>
    <script src="/js/mixitup.min.js"></script>
    <script src="/js/jquery.countdown.min.js"></script>
    <script src="/js/jquery.slicknav.js"></script>
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/jquery.nicescroll.min.js"></script>
    <script src="/js/main.js"></script>
</section>

